<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>XMPP Java Server</display-name>
	<servlet>
		<servlet-name>XMPPEndpoint</servlet-name>
		<servlet-class>io.appsforfree.xmpp_java_server.endpoint.XMPPEndpoint</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet >
	<servlet-mapping>
		<servlet-name>XMPPEndpoint</servlet-name>
		<url-pattern>/xmpp</url-pattern>
	</servlet-mapping>
</web-app>